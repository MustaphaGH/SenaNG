<?xml version="1.0" encoding="utf-8"?>


<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" android:color="#3498db">
            <solid android:color="@android:color/transparent" />
            <stroke android:color="#3498db" android:width="2dp"/>
            <corners android:bottomLeftRadius="20dp"
                android:bottomRightRadius="20dp"
                android:topRightRadius="20dp"
                android:topLeftRadius="20dp"/>
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" android:color="#bababa">
            <solid android:color="#bababa" />
            <stroke android:color="#bababa" android:width="2dp"/>
            <corners android:bottomLeftRadius="20dp"
                android:bottomRightRadius="20dp"
                android:topRightRadius="20dp"
                android:topLeftRadius="20dp"/>
        </shape>
    </item>
</selector>